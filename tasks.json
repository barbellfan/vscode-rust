{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cargo run",
      "type": "shell",
      "command": "cargo",
      "args": [
        "run"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cargo run release",
      "type": "shell",
      "command": "cargo",
      "args": [
        "run",
        "--release"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cargo test",
      "type": "shell",
      "command": "cargo",
      "args": [
        "test"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "cargo test backtrace",
      "type": "shell",
      "command": "cargo",
      "args": [
        "test"
      ],
      "options": {
        "env": {
          "RUST_BACKTRACE": "1",
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "cargo check",
      "type": "shell",
      "command": "cargo",
      "args": [
        "check"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cargo format",
      "type": "shell",
      "command": "cargo",
      "args": [
        "fmt"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cargo clean",
      "type": "shell",
      "command": "cargo",
      "args": [
        "clean"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}